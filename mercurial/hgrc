[ui]
username = Jason Ziglar <jpz@rec.ri.cmu.edu>
merge = meld
editor = vim
ignore = ~/.hgignore
[extensions]
graphlog =
eol =
color =
rebase =
record =
progress =
histedit =
# extdiff =
hgshelve = /home/jpz/jsf/hgshelve/hgshelve.py
onsub = /home/jpz/jsf/onsub/onsub.py

[hooks]
changegroup = hg diff --stat -r $HG_NODE -r tip

[alias]
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
show = log --color=always -pr

[diff]
git = True

[color]
status.added = green bold
status.removed = red bold

[defaults]
outgoing = --style compact -v
incoming = --style compact -v
heads = --template '{rev}:{node|short}({branches}) {desc|firstline}\n'
qseries = -s

[patch]
eol = LF

[tortoisehg]
authorcolor = True
postpull = rebase
ui.language = en
vdiff = meld
tabwidth = 2

[eol]
native = LF
